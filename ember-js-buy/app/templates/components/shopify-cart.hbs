<section class="main">
  <button class="cart-close" {{action "close"}}>
    Ã—
  </button>
  <h2>Cart</h2>
  <ul class="cart-list">
    {{#each cart.lineItems as |item|}}
      <li>
        <div class="view">
          <label>
            {{item.quantity}} -
            {{item.title}}
            {{#if item.variant.title}}
            : {{item.variant.title}}
            {{/if}}
          </label>
          <button class="destroy" {{action "removeItem" item}}></button>
        </div>
      </li>
    {{/each}}
  </ul>
</section>

<footer class="cart-footer">
  <button class="button" disabled={{checkoutDisabled}} {{action "openCheckout"}}>
    Checkout
  </button>
</footer>
