<section class="main">
  <button class="cart-close" {{action "close"}}>
    Ã—
  </button>
  <h2>Cart</h2>
  <ul class="cart-list">
    {{#each cart.lineItems.edges as |item|}}
      <li>
        <div class="view">
          <input class="quantity" min="1" type="number" value={{item.node.quantity}} onchange={{action "updateItem" item.node.id}}>
          <label>
            {{item.node.title}}
            {{#if item.node.variant.title}}
            : {{item.node.variant.title}}
            {{/if}}
          </label>
          <button class="destroy" {{action "removeItem" item.node.id}}></button>
        </div>
      </li>
    {{/each}}
    <li>
      <div class="view">
        <label>
          <strong>Subtotal:</strong>
          $ {{cart.subtotalPrice}}
        </label>
      </div>
    </li>
    <li>
      <div class="view">
        <label>
          <strong>Taxes:</strong>
          $ {{cart.totalTax}}
        </label>
      </div>
    </li>
    <li>
      <div class="view">
        <label>
          <strong>Total:</strong>
          $ {{cart.totalPrice}}
        </label>
      </div>
    </li>
  </ul>
</section>

<footer class="cart-footer">
  <button class="button" disabled={{checkoutDisabled}} {{action "openCheckout"}}>
    Checkout
  </button>
</footer>
